<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="10dp">
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Lecture: "
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="6dp"
        />
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIS"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:background="@drawable/notification_rounded_box"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9:00 - 10:00"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/professor_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prof. Manas Raut"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="16dp"
        />
    <TextView
        android:id="@+id/room_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room: R22"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="16dp"
        />
</LinearLayout>